{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [".eslintrc.json"],
  "rules": {
    "no-console": "error",
    "no-undef": "warn",
    "semi": ["error", "always"]
  }
}
